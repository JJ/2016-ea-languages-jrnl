###############################################################################

CXXFLAGS = -march=native -O3 -std=c++11 -Wall

###############################################################################

SRC = $(wildcard *.cc)
EXE = $(basename $(SRC))
TXT = $(EXE:=.txt)

###############################################################################

default: $(EXE)

all: $(TXT)

clean:
	$(RM) -rf $(EXE) $(TXT)

###############################################################################

%.txt: %
	./$< > $@

###############################################################################

.PHONY: all clean default
.NOEXPORT:

###############################################################################
